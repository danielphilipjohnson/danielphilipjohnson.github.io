---
const title = "Neon Workbench";
const status = "wip"; // 'live' | 'wip' | 'paused'
const stack = ["Astro", "Tailwind", "TypeScript"];
const description =
  "A minimal Astro hub to showcase projects, filters, and live WIP signals. Built fast, themed with Zen neon.";
const site = "https://example.com";
const repo = "https://github.com/danielphilipjohnson/neon-workbench";

const statusBadge = {
  live: "badge--success",
  wip: "badge--warn",
  paused: "badge--paused",
}[status];
---

<article class="card focus-ring">
  <!-- media -->
  <figure
    class="aspect-[16/9] overflow-hidden rounded-lg border [border-color:var(--card-border)]"
  >
    <!-- lightweight placeholder -->
    <div
      class="h-full w-full grid place-items-center
                bg-[color-mix(in_oklab,var(--bg),black_6%)]
                text-[color-mix(in_oklab,var(--fg),transparent_50%)]"
    >
      <svg
        viewBox="0 0 200 60"
        width="100%"
        height="100%"
        class="max-w-[160px]"
      >
        <defs>
          <linearGradient id="g" x1="0" x2="1">
            <stop offset="0%" stop-color="currentColor" stop-opacity=".25"
            ></stop>
            <stop offset="100%" stop-color="currentColor" stop-opacity=".6"
            ></stop>
          </linearGradient>
        </defs>
        <rect
          x="0"
          y="0"
          width="200"
          height="60"
          rx="8"
          fill="none"
          stroke="url(#g)"
          stroke-width="2"></rect>
        <text
          x="50%"
          y="50%"
          dominant-baseline="middle"
          text-anchor="middle"
          fill="currentColor"
          font-size="12">Cover Placeholder</text
        >
      </svg>
    </div>
  </figure>

  <!-- header -->
  <header class="flex items-start justify-between gap-3">
    <h3 class="text-[var(--fg)] text-[var(--fs-1)] font-semibold leading-tight">
      {title}
    </h3>
    <span class={`badge ${statusBadge}`}>{status}</span>
  </header>

  <!-- body -->
  <p class="text-[color-mix(in_oklab,var(--fg),transparent_20%)]">
    {description}
  </p>

  <!-- stack chips -->
  <ul class="mt-1 flex flex-wrap gap-2">
    {
      stack.map((s) => (
        <li class="text-[var(--fs--1)] rounded-md border px-2 py-1 [border-color:var(--border)]">
          {s}
        </li>
      ))
    }
  </ul>

  <!-- footer -->
  <footer class="mt-3 flex flex-wrap items-center justify-between gap-3">
    <div class="flex gap-2">
      <a href={site} target="_blank" rel="noopener" class="btn btn--ghost"
        >Live</a
      >
      <a href={repo} target="_blank" rel="noopener" class="btn btn--primary"
        >Repo</a
      >
    </div>
    <span
      class="text-[var(--fs--1)] text-[color-mix(in_oklab,var(--fg),transparent_40%)]"
    >
      ⭐ 128 · Last push 14 Oct 2025
    </span>
  </footer>
</article>
