---
import "../styles/global.css";
import Header from "../components/site/Header.astro";
import Footer from "../components/site/Footer.astro";
import Seo from "../components/site/Seo.astro";
import { Font } from "astro:assets";

const {
  title = "Project Atlas",
  description = "My active builds and favourite releases.",
  image = "https://raw.githubusercontent.com/danielphilipjohnson/danielphilipjohnson/master/banner/github-banner.png",
  type = "website",
  canonical,
  jsonLd = [],
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <Seo {title} {description} {image} {type} {canonical} {jsonLd} />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script>
      (function () {
        try {
          const saved = localStorage.getItem("atlas-theme");
          const preferDark = matchMedia("(prefers-color-scheme: dark)").matches;
          document.documentElement.setAttribute(
            "data-theme",
            saved || (preferDark ? "dark" : "light"),
          );
        } catch {}
      })();
    </script>
  </head>
</html>
<body class="bg-[var(--bg)] text-[var(--fg)]">
  <a
    href="#main"
    class="sr-only focus:not-sr-only focus:fixed focus:top-3 focus:left-3 focus:z-50
                           rounded-md border bg-[var(--surface-1)] px-3 py-2 [border-color:var(--border)]"
  >
    Skip to content
  </a>
  <Header />
  <main id="main" class="container grid gap-8">
    <slot />
  </main>
  <Footer />
</body>
